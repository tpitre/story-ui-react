/**
 * StoryUIPanel CSS - Modern CSS Architecture
 *
 * Uses CSS Layers for cascade control (no !important needed)
 * Uses CSS Custom Properties for theming
 * Follows BEM-like naming: .sui-{block}__{element}--{modifier}
 */

/* Layer order defines cascade priority */
@layer reset, base, theme, layout, components, utilities;

/* ============================================
   LAYER: Reset - Normalize browser defaults
   ============================================ */
@layer reset {
  .sui-panel,
  .sui-panel *,
  .sui-panel *::before,
  .sui-panel *::after {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  .sui-panel button {
    font: inherit;
    color: inherit;
    background: none;
    border: none;
    cursor: pointer;
  }

  .sui-panel input,
  .sui-panel select,
  .sui-panel textarea {
    font: inherit;
    color: inherit;
  }
}

/* ============================================
   LAYER: Base - Typography and defaults
   ============================================ */
@layer base {
  .sui-panel {
    font-family: var(--sui-font-family);
    font-size: var(--sui-font-size-base);
    line-height: var(--sui-line-height);
    color: var(--sui-color-text);
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  .sui-panel a {
    color: var(--sui-color-brand);
    text-decoration: none;
  }

  .sui-panel a:hover {
    text-decoration: underline;
  }

  .sui-panel code {
    font-family: var(--sui-font-mono);
    font-size: 0.9em;
    background: var(--sui-color-code-bg);
    padding: 0.15em 0.4em;
    border-radius: 4px;
  }

  .sui-panel pre {
    font-family: var(--sui-font-mono);
    font-size: 13px;
    line-height: 1.5;
    overflow-x: auto;
  }
}

/* ============================================
   LAYER: Theme - CSS Custom Properties
   ============================================ */
@layer theme {
